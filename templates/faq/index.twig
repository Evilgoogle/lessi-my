            <div class="row">
                <div class="col-sm-12">
                    {% for item in categories %}
                        <div class="col-xs-12 col-md-4">
                            <div class="panel panel-default bn">
                                <div class="panel-heading">
                                    <div class="title">{{ item.title }}</div>
                                    <a href="{{ path_for('faqs.categories', { id: item.id }) }}" class="btn btn-primary">Alle anzeigen</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}