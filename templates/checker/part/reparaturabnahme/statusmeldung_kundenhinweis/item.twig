<div id="kundenhinweise_item_{{ item.id }}" class="item panel panel-default">
    <div class="panel-heading">
        {% if item.type == 'angebot' %}
            <div class="flex">
                <div class="icon">
                    <i class="fas fa-file-contract"></i>
                </div>
                <div class="title">{{ item.title }}</div>
            </div>
        {% elseif item.type == 'technische' %}
            <div class="flex">
                <div class="icon">
                    <i class="fas fa-cog"></i>
                </div>
                <div class="title">{{ item.title }}</div>
            </div>
        {% elseif item.type == 'fahrzeugnutzung' %}
            <div class="flex">
                <div class="icon">
                    <i class="fas fa-info-circle"></i>
                </div>
                <div class="title">{{ item.title }}</div>
            </div>
        {% elseif item.type == 'serviceberater' %}
            <div class="flex">
                <div class="icon">
                    <i class="fas fa-user"></i>
                </div>
                <div class="title">{{ item.title }}</div>
            </div>
        {% endif %}    
    </div>
    <div class="panel-body">
        <div class="row">
            <div class="col-xs-6">
                <div class="flex">
                    <input type="text" name="erledigt" class="form-control" placeholder="Erledigt" value="{{ item.erledigt }}">
                    <button type="button" class="btn btn-primary js_erledigt" data-id="{{ item.id }}">Speichern</button>
                </div>
            </div>
            <div class="col-xs-6">
                <div class="flex_right">
                    <button type="button" class="btn btn-primary js_kundenhinweis_kommentar_modal" data-id="{{ item.id }}">Einen Kommentar hinzuf√ºgen +</button>
                </div>
                <div class="comments">
                    <ul class="list-group" id="comments_{{ item.id }}">
                        {% for komment in item.getKommentars %}
                            {% include 'checker/part/reparaturabnahme/statusmeldung_kundenhinweis/komment.twig' with { 'item': komment } %}
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>